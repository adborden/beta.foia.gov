extends: airbnb
settings:
  import/resolver: webpack
env:
  browser: yes
globals:
  $: true
  jQuery: true
rules:
  camelcase: 0
  no-mixed-operators: 0
  no-plusplus: 0
  no-param-reassign:
    - error
    - props: false
  no-underscore-dangle:
    - 2
    - allowAfterThis: true
  'react/forbid-prop-types': 0
  'react/jsx-no-bind': 0
  semi: ["error", "always"]
